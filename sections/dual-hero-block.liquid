{%- style -%}
.dual-hero-block {
    width: 100%;
    display: flex;
    justify-content: space-between;
}
@media (width < 992px) {
    .dual-hero-block {
        flex-direction: column;
        gap: 4rem;
    }
}
.hero-wrapper {
    width: 100%;
    flex: 1 1 0;
    position: relative;
}
.hero-wrapper .media {
    height: 100%;
    max-height: 600px;
    width: 100%;
}
.dual-hero-block .hero-wrapper .media img {
    position: static !important;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.hero-wrapper .image-title {
    position: absolute;
    top: 7rem;
    left: 10%;
    right: 10%;
    color: var(--primary);
    font-family: var(--font-heading-family);
    font-size: 1.4rem;
    line-height: 1.4;
    font-weight: 600;
    z-index: 1;
    height: auto;
}
@media (width > 991px) {
    .hero-wrapper .image-title {
        top: 8rem;
        font-size: 1.6rem;
    }
    .left-hero-wrapper .image-title {
        text-align: end;
    }
}
@media (width < 480px) {
    .hero-wrapper .image-title {
        top: unset;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.5);
        padding: 2rem;
    }
}
.dual-hero-block .hero-wrapper a {
    background: var(--primary);
    color: var(--secondary);
    padding: 1rem 2rem;
    display: inline-block;
    position: absolute;
    top: -2rem;
    z-index: 2;
    text-decoration: none;
    max-width: 240px;
    line-height: 1.3;
    text-align: start;
    text-wrap-style: pretty;
    min-height: 70px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    transition: all 0.2s ease-in-out;
}

.dual-hero-block .left-hero-wrapper a {
    right: 10%;
}
.dual-hero-block .right-hero-wrapper a {
    left: 10%;
}
@media (width < 992px) {
    .dual-hero-block .left-hero-wrapper a {
        right: unset;
        left: 10%;
    }
}
@media (width < 480px) {
    .dual-hero-block .left-hero-wrapper a, .dual-hero-block .right-hero-wrapper a {
        right: 2rem;
        left: 2rem;
        max-width: 100%;
        text-wrap-style: stable;
    }
}

.dual-hero-block .hero-wrapper a:hover {
    background: var(--secondary);
    color: var(--primary);
}

{%- endstyle -%}


{%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
{%- capture sizes -%}
    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
    (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
{%- endcapture -%}
{%- assign fetch_priority = 'auto' -%}


<div
  id="Dual-Hero-Block-{{ section.id }}"
  class="dual-hero-block"
>
    <div class="hero-wrapper left-hero-wrapper">
        {% if section.settings.link_left and section.settings.link_label_left %}
            <a href="{{ section.settings.link_left }}">
            <span>{{ section.settings.link_label_left }}</span>
            </a>
        {% endif %}
        <div class="media">
            {{
            section.settings.image_left
            | image_url: width: 1500
            | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
            }}
        </div>
        <div class="image-title">{{ section.settings.image_title_left }}</div>
    </div>
    <div class="hero-wrapper right-hero-wrapper">
        {% if section.settings.link_right and section.settings.link_label_right %}
            <a href="{{ section.settings.link_right }}">
                <span>{{ section.settings.link_label_right }}</span>
            </a>
        {% endif %}
        <div class="media">
            {{
            section.settings.image_right
            | image_url: width: 1500
            | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
            }}
        </div>
        <div class="image-title">{{ section.settings.image_title_right }}</div>

    </div>

</div>


