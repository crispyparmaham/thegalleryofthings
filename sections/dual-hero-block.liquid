{%- style -%}

{%- endstyle -%}


{%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
{%- capture sizes -%}
    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
    (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
{%- endcapture -%}
{%- assign fetch_priority = 'auto' -%}


<div
  id="Dual-Hero-Block-{{ section.id }}"
  class="dual-hero-block"
>
    <div class="left-hero-wrapper">
        <div class="banner__media media">
              {{
                section.settings.image_left
                | image_url: width: 1500
                | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
              }}
        </div>
    </div>
    <div class="right-hero-wrapper">
        <div class="banner__media media">
              {{
                section.settings.image_right
                | image_url: width: 1500
                | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
              }}
        </div>

    </div>

</div>


{% schema %}
{
    "name": "Dual-Hero-Block",
    "class": "section",
    "tag": "section",
    "disabled_on": {
        "groups": ["header", "footer"]
    },
    "settings": [
        {
        "type": "header",
        "content": "Bild links"
        },
        {
          "type": "image_picker",
          "id": "image_left",
          "label": "Bild links"
        },
        {
          "type": "text",
          "id": "image_title_left",
          "label": "Bildbeschriftung links",
        },
        {
          "type": "text",
          "id": "link_label_left",
          "label": "Linkbeschriftung links",
          "info": "t:sections.multicolumn.blocks.column.settings.link_label.info"
        },
        {
          "type": "url",
          "id": "link_left",
          "label": "Linkbeschriftung links"
        },
        {
        "type": "header",
        "content": "Bild rechts"
        },
        {
          "type": "image_picker",
          "id": "image_right",
          "label": "Bild rechts"
        },
        {
          "type": "text",
          "id": "image_title_right",
          "label": "Bildbeschriftung rechts",
        },
        {
          "type": "text",
          "id": "link_label_right",
          "label": "Linkbeschriftung rechts",
          "info": "t:sections.multicolumn.blocks.column.settings.link_label.info"
        },
        {
          "type": "url",
          "id": "link_right",
          "label": "Linkbeschriftung rechts"
        }
    ],
    "presets": [
    ]
}
{% endschema %}
