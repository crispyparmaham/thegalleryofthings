  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "items_to_show",
      "min": 2,
      "max": 25,
      "step": 1,
      "default": 4,
      "label": "Anzahl anzuzeigender Elemente"
    },     
    {
      "type": "header",
      "content": "Text"
    },   
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Spotlight",
      "label": "Überschrift"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Klein"
        },
        {
          "value": "h1",
          "label": "Mittel"
        },
        {
          "value": "h0",
          "label": "Groß"
        },
        {
          "value": "hxl",
          "label": "Extra groß"
        },
        {
          "value": "hxxl",
          "label": "Extra extra groß"
        }
