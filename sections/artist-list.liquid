{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Artist-spezifische Styles */
  .artist-list .artist-card {
    position: relative;
    text-decoration: none;
    color: inherit;
  }

  .artist-list .artist-card:hover {
    transform: translateY(-2px);
    transition: transform 0.3s ease;
  }

  .artist-list .artist-name {
    margin-top: 1rem;
    font-weight: bold;
  }

  .artist-list .artist-description {
    margin-top: 0.5rem;
    opacity: 0.8;
    font-size: 0.9rem;
  }
{%- endstyle -%}

{% assign number_of_artists = 0 %}
{% for artist in shop.metaobjects.artists.values %}
  {% assign number_of_artists = number_of_artists | plus: 1 %}
{% endfor %}
{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  
  assign all_artists = shop.metaobjects.artists.values

  assign max_columns_to_show = columns_mobile_int
  if section.settings.columns_desktop > columns_mobile_int
    assign max_columns_to_show = section.settings.columns_desktop
  endif
  
  if section.settings.swipe_on_mobile and number_of_artists > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}
{% comment %} <div>
  Test: {{ shop.metaobjects.artists.values | size }} Metaobjekte gefunden
  <br>
{%  assign number_of_artists = 0 %}
{% for artist in shop.metaobjects.artists.values %}
  {% assign number_of_artists = number_of_artists | plus: 1 %}
  <div>
    <h3>{{ artist.name.value }}</h3>
    
    {% if artist.image.value %}
      <img src="{{ artist.image.value | image_url: width: 300 }}" alt="{{ artist.name.value }}">
    {% endif %}
    
    {% if artist.description.value %}
      <div>{{ artist.description | metafield_tag }}</div>
    {% endif %}
    
  </div>
{% endfor %}
</div> {% endcomment %}


<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-list-wrapper artist-list page-width isolate{% if show_mobile_slider %} page-width-desktop{% endif %}{% if section.settings.title == blank %} no-heading{% endif %}{% if section.settings.show_view_all == false or number_of_artists <= section.settings.artists_to_show %} no-mobile-link{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        <h2
          id="SectionHeading-{{ section.id }}"
          class="collection-list-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        >
          {{ section.settings.title }}
        </h2>

        {%- if section.settings.show_view_all and show_mobile_slider and number_of_artists > section.settings.artists_to_show -%}
          <a
            href="{{ pages[section.settings.all_artists_page].url | default: '/pages/artists' }}"
            id="ViewAll-{{ section.id }}"
            class="link underlined-link large-up-hide{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            aria-labelledby="ViewAll-{{ section.id }} SectionHeading-{{ section.id }}"
          >
            {{- 'sections.collection_list.view_all' | t -}}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <slider-component class="slider-mobile-gutter{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <ul
        class="collection-list contains-card contains-card--collection{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if section.settings.swipe_on_mobile %} slider slider--tablet grid--peek{% endif %} collection-list--{{ number_of_artists | at_most: section.settings.artists_to_show }}-items"
        id="Slider-{{ section.id }}"
        role="list"
      >

        {% assign artists_to_display = shop.metaobjects.artists.values %}
        {%- for artist in artists_to_display -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="collection-list__item grid__item{% if show_mobile_slider %} slider__slide{% endif %}{% if artist.image.value == blank %} collection-list__item--no-media{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {% comment %} <a href="{{ artist.url }}" class="artist-card">
              <div class="card-wrapper underline-links-hover">
                <div class="card card--{{ settings.card_style }}{% if artist.image.value != blank %} card--media{% else %} card--text{% endif %}{% if settings.card_style == 'card' %} color-{{ settings.card_color_scheme }} gradient{% endif %}" style="--ratio-percent: {% if section.settings.image_ratio == 'adapt' %}100%{% elsif section.settings.image_ratio == 'portrait' %}125%{% elsif section.settings.image_ratio == 'square' %}100%{% endif %};">
                  <div class="card__inner {% if settings.card_style == 'standard' %}color-{{ settings.card_color_scheme }} gradient{% endif %}{% if artist.image.value != blank %} ratio{% endif %}" style="--ratio-percent: {% if section.settings.image_ratio == 'adapt' %}100%{% elsif section.settings.image_ratio == 'portrait' %}125%{% elsif section.settings.image_ratio == 'square' %}100%{% endif %};">
                    {%- if artist.image.value != blank -%}
                      <div class="card__media">
                        <div class="media media--transparent media--hover-effect">
                          {% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
                          <img
                            srcset="{%- if artist.image.value.width >= 165 -%}{{ artist.image.value | image_url: width: 165 }} 165w,{%- endif -%}
                            {%- if artist.image.value.width >= 330 -%}{{ artist.image.value | image_url: width: 330 }} 330w,{%- endif -%}
                            {%- if artist.image.value.width >= 535 -%}{{ artist.image.value | image_url: width: 535 }} 535w,{%- endif -%}
                            {%- if artist.image.value.width >= 750 -%}{{ artist.image.value | image_url: width: 750 }} 750w,{%- endif -%}
                            {%- if artist.image.value.width >= 1000 -%}{{ artist.image.value | image_url: width: 1000 }} 1000w,{%- endif -%}
                            {%- if artist.image.value.width >= 1500 -%}{{ artist.image.value | image_url: width: 1500 }} 1500w,{%- endif -%}
                            {{ artist.image.value | image_url }} {{ artist.image.value.width }}w"
                            src="{{ artist.image.value | image_url: width: 535 }}"
                            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px, (min-width: 750px) {% if columns > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %}, calc(100vw - 3rem)"
                            alt="{{ artist.image.value.alt | default: artist.name.value }}"
                            class="motion-reduce"
                            {% unless forloop.first %}loading="lazy"{% endunless %}
                            width="{{ artist.image.value.width }}"
                            height="{{ artist.image.value.height }}"
                          >
                          {% comment %}theme-check-enable ImgLazyLoading{% endcomment %}
                        </div>
                      </div>
                    {%- endif -%}
                    <div class="card__content">
                      <div class="card__information">
                        <h3 class="card__heading artist-name">
                          <span class="full-unstyled-link">
                            {{ artist.name.value | default: artist.handle }}
                          </span>
                        </h3>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </a> {% endcomment %}

            {% render 'card-artist',
              artist: artist,
              media_aspect_ratio: section.settings.image_ratio,
              extend_height: true,
              wrapper_class: 'product-card-wrapper',
              columns: section.settings.columns_desktop
            %}

          </li>
        {%- endfor -%}
      </ul>
      {%- if show_mobile_slider -%}
        <div class="slider-buttons">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ number_of_artists }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      {%- endif -%}
    </slider-component>

    {%- if section.settings.show_view_all and number_of_artists > section.settings.artists_to_show -%}
      <div
        class="center collection-list-view-all{% if show_mobile_slider %} small-hide medium-hide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        <a
          href="{{ pages[section.settings.all_artists_page].url | default: '/pages/artists' }}"
          class="button"
          id="ViewAllButton-{{ section.id }}"
          aria-labelledby="ViewAllButton-{{ section.id }} SectionHeading-{{ section.id }}"
        >
          {{ 'sections.collection_list.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Artist List",
  "tag": "section",
  "class": "section section-artist-list",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Unsere Künstler",
      "label": "Überschrift"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Klein"
        },
        {
          "value": "h1",
          "label": "Mittel"
        },
        {
          "value": "h0",
          "label": "Groß"
        },
        {
          "value": "hxl",
          "label": "Extra Groß"
        },
        {
          "value": "hxxl",
          "label": "XXL"
        }
      ],
      "default": "h1",
      "label": "Überschriftgröße"
    },
    {
      "type": "range",
      "id": "artists_to_show",
      "min": 3,
      "max": 20,
      "step": 1,
      "default": 6,
      "label": "Anzahl Artists anzeigen"
    },
    {
      "type": "header",
      "content": "Layout"
    },    
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "An Bild anpassen"
        },
        {
          "value": "portrait",
          "label": "Hochformat"
        },
        {
          "value": "square",
          "label": "Quadrat"
        }
      ],
      "default": "square",
      "label": "Bildformat"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Spalten Desktop"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Farbschema",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Alle Artists Link anzeigen"   
    },
    {
      "type": "page",
      "id": "all_artists_page",
      "label": "Alle Artists Seite",
      "info": "Seite für den 'Alle Artists' Link"
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 Spalte"
        },
        {
          "value": "2",
          "label": "2 Spalten"
        }
      ],
      "default": "1",
      "label": "Mobile Spalten"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "Wischen auf Mobile"
    },
    {
      "type": "header",
      "content": "Abstände"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand oben",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abstand unten",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Artist List",
      "settings": {
        "title": "Unsere Künstler"
      }
    }
  ]
}
{% endschema %}